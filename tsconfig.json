{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "/",
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./@types"],
  },
  "exclude": ["./node_modules", "./**/node_modules", "build", "scripts"],
}
